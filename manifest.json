{
  "manifest_version": 2,
  "name": "Monitoring Ethermine.org",
  "description": "Monitoring your account in ethermine.org pool",
  "version": "1.0",
  "icons": {
    "128": "images/icon_128.png"
  },
  "permissions": [
    "https://ethermine.org/",
    "notifications",
    "background"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/icon_128.png",
    "default_popup": "popup.html"
  }
}